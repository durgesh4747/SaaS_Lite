// "build": "prisma generate && next build" --> This ensueres that the Prisma Client is generated before building the Next.js app or deploying it to production.

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  clerkId String @unique
  email String?
  name String?

  clients Client[]
  invoices Invoice[]

  createdAt DateTime @default(now())
}

model Client{
  id Int @id @default(autoincrement())
  name String
  email String?
  
  userId Int
  user User @relation(fields:[userId], references: [id])

  invoices Invoice[]
}

model Invoice {
  id Int @id @default(autoincrement())
  invoiceNumber String
  totalAmount Float
  issueDate DateTime
  
  userId Int
  user User @relation(fields: [userId], references: [id])

  clientId Int
  client Client @relation(fields:[clientId], references: [id])

  items InvoiceItem[]

  createdAt DateTime @default(now())
}

model InvoiceItem {
  id Int @id @default(autoincrement())
  description String
  quantity Int
  price Float
  
  invoiceId Int
  invoice Invoice @relation(fields: [invoiceId], references: [id])
}